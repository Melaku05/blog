
<%= form_with model: [@users, @posts], url: create_user_post_path  do |form| %>
  <% if @posts.errors.any? %>
    <div>
      <% @posts.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Add post title" %>
  </div>
  <div class="">
    <%= form.label :text %>
    <%= form.text_field :text, placeholder: "Add post body" %>
  </div>
  <div class="">
    <%= form.submit "Add post" %>
  </div>

<% end %>

